age = 36
txt = "My name is John, and I am {}"
print(txt.format(age))                  >>>>>>>>>>>>>>>>>>>>>>>>>>       My name is John, and I am 36

-----------------------------------------------------
age = 36
weight = 90
txt = "My name is John, and I am {} , my weight is {}"
print(txt.format(age,weight))           >>>>>>>>>>>>>>>>>>>>>>>>>>     My name is John, and I am 36 , my weight is 90 


